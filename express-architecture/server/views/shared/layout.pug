doctype
html
    head
        title Hello!
        link(href="/css/style.css" rel="stylesheet")
    body
        .container
            ul.menu
                li
                    a(href="/") Home
                li
                    a(href="/about") About
                if (currentUser)
                    li
                        span=currentUser.firstName
                    li
                        form#logout-form(method="post" action="/users/logout" style="display:inline-block")
                            a(href="javascript:document.getElementById('logout-form').submit();") Logout
                else
                    li
                        a(href="/users/register") Register
                    li
                        a(href="/users/login") Login
            if (globalError)
                div=globalError
            block main-content